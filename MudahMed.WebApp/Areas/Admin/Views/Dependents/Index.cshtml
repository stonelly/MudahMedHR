@model IEnumerable<MudahMed.Data.ViewModel.Dep.DependentViewModel>

<main id="js-page-content" role="main" class="page-content">
    <ol class="breadcrumb page-breadcrumb" id="breadcrumb">
        <!-- Breadcrumb items will be appended here -->
    </ol>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        List Dependent
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                        <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <p class="card-description">
                            <a class="btn btn-primary" asp-action="Create">Create New Dependent</a>
                        </p>

                        <form method="get" asp-action="Index">
                            <div class="panel-content">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="drugName">Dependent Name</label>
                                        <input type="text" id="drugName" name="drugName" class="form-control" placeholder="Search by drug name" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="category">Dependent IC</label>
                                        <input type="text" id="drugCategory" name="drugCategory" class="form-control" placeholder="Search by category" />
                                    </div>
                                </div>
                                <div class="panel-content d-flex flex-row">
                                    <button class="btn btn-info ml-auto" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                        <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dep_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_ic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenefitID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relationship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep_nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Join_dt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ent_dt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepResignDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Emp_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_ic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BenefitID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Relationship)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dep_nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Join_dt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ent_dt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepResignDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Emp_name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Dep_id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Dep_id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Dep_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Delete modal -->
<div class="modal modal-alert fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this drug?
            </div>
            <div class="modal-footer">
                <form method="get" asp-action="DeleteDrug">
                    <input type="hidden" name="drugID" id="drugID" />
                    <button type="button" class="btn btn-secondary me-2" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            document.getElementById('drugID').value = id;
            $('#deleteConfirmModal').modal('show');
        }
    </script>
}
